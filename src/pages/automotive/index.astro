---
// src/pages/automotive/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "Automotive Technology & Industry Analysis";
const pageDescription = "Insights into vehicle technology, industry trends, and transportation innovation.";
---

<BaseLayout>
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="text-4xl font-bold text-slate-900 mb-8">{pageTitle}</h1>
      
      <div class="prose prose-lg max-w-none">
        <p>
          Stay informed about the rapidly evolving automotive landscape. We cover:
        </p>
        <ul>
          <li>Electric vehicle technology</li>
          <li>Autonomous driving systems</li>
          <li>Industry disruption analysis</li>
          <li>Consumer buying patterns</li>
          <li>Regulatory impact assessments</li>
        </ul>
        
        <h2>Featured Articles</h2>
        
        <!-- Article list component will go here -->
      </div>
    </div>
  </section>
</BaseLayout>
