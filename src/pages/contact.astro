---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';
const pageTitle = 'Contact';
const pageDescription = 'Get in touch with ThinkingWhy for questions, feedback, or collaboration.';
---

---
const action = import.meta.env.PUBLIC_CONTACT_ENDPOINT || 'https://formspree.io/f/mwkgejko';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <BreadcrumbSchema items={[
    { name: 'Home', url: '/' },
    { name: 'Contact', url: '/contact' }
  ]} />
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-3xl px-4 sm:px-6">
      <h1 class="text-4xl font-bold text-slate-900 mb-8">{pageTitle}</h1>
      <div class="prose prose-lg max-w-none">
        <p>Weâ€™d love to hear from you. For general inquiries, partnerships, or feedback, email us at <a href="mailto:hello@thinkingwhy.com">hello@thinkingwhy.com</a>.</p>
      </div>

      <form class="mt-8 grid grid-cols-1 gap-6" method="POST" action={action}>
        <div>
          <label class="block text-sm font-medium text-slate-700">Name</label>
          <input type="text" name="name" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-amber-500 focus:ring-amber-500" />
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700">Email</label>
          <input type="email" name="email" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-amber-500 focus:ring-amber-500" />
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700">Message</label>
          <textarea name="message" rows="5" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-amber-500 focus:ring-amber-500"></textarea>
        </div>
        <div>
          <button type="submit" class="inline-flex items-center px-6 py-3 rounded-md bg-amber-600 text-white font-semibold hover:bg-amber-700">Send</button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>
