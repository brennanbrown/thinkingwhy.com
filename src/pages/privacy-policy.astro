---
// src/pages/privacy-policy.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';
const pageTitle = 'Privacy Policy';
const pageDescription = 'How we collect, use, and protect your information at ThinkingWhy.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <BreadcrumbSchema items={[
    { name: 'Home', url: '/' },
    { name: 'Privacy Policy', url: '/privacy-policy' }
  ]} />
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="text-4xl font-bold text-slate-900 mb-8">{pageTitle}</h1>
      <div class="prose prose-lg max-w-none">
        <p>Last updated: {new Date().toISOString().slice(0,10)}</p>

        <p>
          We value your privacy. This policy explains what data we collect, how we use it, and your rights.
        </p>

        <h2>Information We Collect</h2>
        <ul>
          <li>Analytics data (page views, device, referrer) via Google Analytics</li>
          <li>Advertising data via Google AdSense (non-PII interest signals)</li>
          <li>Contact form submissions (name, email, message) if you reach out</li>
        </ul>

        <h2>How We Use Information</h2>
        <ul>
          <li>Improve site performance and content</li>
          <li>Respond to inquiries</li>
          <li>Serve contextually relevant ads</li>
        </ul>

        <h2>Cookies</h2>
        <p>
          We use cookies for analytics and advertising. You can manage cookies in your browser settings. See our <a href="/cookie-policy">Cookie Policy</a>.
        </p>

        <h2>Third-Party Services</h2>
        <ul>
          <li>Google Analytics (usage analytics)</li>
          <li>Google AdSense (advertising)</li>
        </ul>

        <h2>Your Rights</h2>
        <p>
          You can request access, correction, or deletion of your personal data by contacting us at <a href="/contact">Contact</a>.
        </p>

        <h2>Contact</h2>
        <p>
          For privacy questions, email us via the <a href="/contact">contact page</a>.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
