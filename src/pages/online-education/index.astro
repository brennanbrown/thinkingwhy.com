import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "Online Education Strategies";
const pageDescription = "Innovative approaches to digital learning, skill acquisition, and educational technology.";
---

<BaseLayout>
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="text-4xl font-bold text-slate-900 mb-8">{pageTitle}</h1>
      
      <div class="prose prose-lg max-w-none">
        <p>
          Master the art of online learning with our research-backed resources. We cover:
        </p>
        <ul>
          <li>Effective learning methodologies</li>
          <li>Curriculum design principles</li>
          <li>Educational technology platforms</li>
          <li>Certification pathways</li>
          <li>Skill-based learning frameworks</li>
        </ul>
        
        <h2>Featured Articles</h2>
        
        <!-- Article list component will go here -->
      </div>
    </div>
  </section>
</BaseLayout>
