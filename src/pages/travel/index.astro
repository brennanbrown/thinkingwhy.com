---
// src/pages/travel/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "Travel Strategies & Destination Insights";
const pageDescription = "Data-driven travel planning, destination analysis, and cultural exploration.";
---

<BaseLayout>
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h1 class="text-4xl font-bold text-slate-900 mb-8">{pageTitle}</h1>
      
      <div class="prose prose-lg max-w-none">
        <p>
          Explore the world through our analytical lens. We examine:
        </p>
        <ul>
          <li>Destination value analysis</li>
          <li>Travel hacking techniques</li>
          <li>Cultural immersion strategies</li>
          <li>Sustainable travel practices</li>
          <li>Industry trend forecasting</li>
        </ul>
        
        <h2>Featured Articles</h2>
        
        <!-- Article list component will go here -->
      </div>
    </div>
  </section>
</BaseLayout>
