---
// src/components/ads/HeaderAd.astro
import AdSenseUnit from './AdSenseUnit.astro';

interface Props {
  lazyLoad?: boolean;
}

const { lazyLoad = true } = Astro.props;
---

<AdSenseUnit 
  slot="header_ad" 
  className="header-ad" 
  adFormat="horizontal" 
  lazyLoad={lazyLoad} 
/>

<style>
  .header-ad {
    margin-top: 1rem;
    margin-bottom: 1.5rem;
  }
</style>
