import NewsletterSignup from './NewsletterSignup.astro';
---

<aside class="w-full lg:w-80 space-y-8">
  <!-- Author Bio -->
  <div class="bg-slate-50 rounded-lg p-6">
    <div class="flex items-center mb-4">
      <img src="/images/authors/brennan-brown.jpg" alt="Brennan Kenneth Brown" class="w-16 h-16 rounded-full mr-4" />
      <div>
        <h3 class="font-bold text-lg">Brennan Kenneth Brown</h3>
        <p class="text-sm text-slate-600">Founder & Chief Question Asker</p>
      </div>
    </div>
    <p class="text-sm text-slate-700">Brennan is a Queer MÃ©tis writer, community builder, and creative leader with a passion for exploring the deeper questions behind technology, culture, and human experience.</p>
  </div>
  
  <!-- Newsletter Signup -->
  <NewsletterSignup />
  
  <!-- Popular Posts -->
  <div class="bg-slate-50 rounded-lg p-6">
    <h3 class="font-bold text-lg mb-4">Popular Insights</h3>
    <ul class="space-y-3">
      <li><a href="#" class="text-slate-800 hover:text-amber-600 transition-colors text-sm font-medium">How AI Search Engines Cite Content</a></li>
      <li><a href="#" class="text-slate-800 hover:text-amber-600 transition-colors text-sm font-medium">7 AI-Powered Insurance Trends</a></li>
      <li><a href="#" class="text-slate-800 hover:text-amber-600 transition-colors text-sm font-medium">Luxury Shopping in the AI Era</a></li>
    </ul>
  </div>
  
  <!-- Newsletter -->
  <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-lg p-6 border border-amber-200">
    <h3 class="font-bold text-lg mb-2">Join the Inquiry</h3>
    <p class="text-sm text-slate-700 mb-4">Get weekly insights that challenge assumptions and deepen understanding.</p>
    <form>
      <input type="email" placeholder="Your email" class="w-full px-4 py-2 rounded-lg mb-2 text-sm" />
      <button type="submit" class="w-full bg-amber-600 text-white py-2 rounded-lg font-medium hover:bg-amber-700 transition-colors text-sm">Subscribe</button>
    </form>
  </div>
  
  <!-- Trust Badges -->
  <div class="flex flex-wrap justify-center gap-4 pt-4">
    <div class="text-center">
      <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16 mx-auto" />
      <p class="text-xs mt-2">Expert Verified</p>
    </div>
    <div class="text-center">
      <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16 mx-auto" />
      <p class="text-xs mt-2">AI-Optimized</p>
    </div>
  </div>
</aside>
