---
// src/components/ui/RecentArticles.astro
import { getCollection } from 'astro:content';

const { limit = 3 } = Astro.props;

const all = await getCollection('blog');
const posts = all
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, limit);
---

<section class="py-16 bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-slate-900">Featured Insights</h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto mt-4">
        Explore our latest research and analysis
      </p>
    </div>
    
    {posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {posts.map(post => {
          const data = post.data;
          const imgSrc = data.image ?? data.heroImage?.src;
          const imgAlt = data.heroImage?.alt ?? data.title;
          return (
          <div class="bg-white rounded-lg overflow-hidden shadow-md">
            {imgSrc && (
              <img src={imgSrc} alt={imgAlt} class="w-full h-48 object-cover" />
            )}
            <div class="p-6">
              <h3 class="text-xl font-semibold text-slate-900 mb-2">{data.title}</h3>
              <p class="text-slate-600 mb-4">
                {data.description}
              </p>
              <a href={`/blog/${post.slug}`} class="text-amber-600 hover:text-amber-700 font-medium">
                Read Analysis
              </a>
            </div>
          </div>
          );
        })}
      </div>
    ) : (
      <p class="text-center text-slate-600">No articles found. Check back soon!</p>
    )}
  </div>
</section>
