---
// src/components/ui/NewsletterSignup.astro
const formAction = "https://example.com/mailchimp-endpoint"; // Replace with actual Mailchimp URL
const placeholder = "Your email address";
const buttonText = "Subscribe";
---

<div class="bg-slate-50 rounded-lg p-6">
  <h3 class="text-lg font-semibold text-slate-900 mb-3">Join the ThinkingWhy Newsletter</h3>
  <p class="text-sm text-slate-600 mb-4">Get exclusive insights and analysis delivered weekly.</p>
  
  <form action={formAction} method="post" class="space-y-3">
    <div>
      <label for="email" class="sr-only">Email</label>
      <input 
        type="email" 
        name="EMAIL" 
        id="email" 
        required 
        placeholder={placeholder}
        class="w-full px-4 py-2 border border-slate-300 rounded-md focus:ring-2 focus:ring-amber-500 focus:border-transparent"
      />
    </div>
    <div>
      <button 
        type="submit" 
        class="w-full bg-amber-600 hover:bg-amber-700 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out"
      >
        {buttonText}
      </button>
    </div>
  </form>
  <p class="mt-3 text-xs text-slate-500">We respect your privacy. Unsubscribe at any time.</p>
</div>
