---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const url = Astro.url;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url.toString());
---

<div class="flex flex-wrap items-center gap-3 text-sm">
  <span class="uppercase tracking-wide text-slate-400">Share:</span>
  <a
    href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
    target="_blank"
    rel="noopener"
    class="rounded-full bg-slate-900 px-3 py-1 text-slate-300 transition hover:bg-slate-800 hover:text-white"
  >
    X
  </a>
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
    target="_blank"
    rel="noopener"
    class="rounded-full bg-slate-900 px-3 py-1 text-slate-300 transition hover:bg-slate-800 hover:text-white"
  >
    LinkedIn
  </a>
  <a
    href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
    target="_blank"
    rel="noopener"
    class="rounded-full bg-slate-900 px-3 py-1 text-slate-300 transition hover:bg-slate-800 hover:text-white"
  >
    Facebook
  </a>
  <button
    type="button"
    class="rounded-full bg-slate-900 px-3 py-1 text-slate-300 transition hover:bg-slate-800 hover:text-white"
    onClick={() => navigator.clipboard.writeText(url.toString())}
  >
    Copy link
  </button>
</div>
