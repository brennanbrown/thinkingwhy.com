---
interface Props {
  posts: Array<any>;
}

const { posts } = Astro.props as Props;
---

<section class="rounded-lg border border-slate-800 bg-slate-900/40 p-6">
  <h2 class="text-lg font-semibold text-white">Related posts</h2>
  <ul class="mt-4 space-y-3 text-sm text-slate-300">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.slug}`} class="transition hover:text-white">
          {post.data.title}
        </a>
        <p class="text-xs text-slate-400">{post.data.category}</p>
      </li>
    ))}
  </ul>
</section>
